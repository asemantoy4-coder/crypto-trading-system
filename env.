# ==============================================================================
# CORS Settings
# ==============================================================================
# برای Development (همه origin ها مجاز)
ALLOWED_ORIGINS=*

# برای Production (فقط domainهای مشخص)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000

# ==============================================================================
# Rate Limiting
# ==============================================================================
ENABLE_RATE_LIMIT=true
RATE_LIMIT=20/minute

# گزینه‌های دیگر:
# RATE_LIMIT=10/minute     # محدودتر
# RATE_LIMIT=100/minute    # آزادتر
# RATE_LIMIT=5/second      # برای تست

# ==============================================================================
# Logging
# ==============================================================================
